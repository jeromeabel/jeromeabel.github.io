---
import { Image } from "astro:assets";
const { title, id, image } = Astro.props;
---

<div class="reveal reveal-bottom md:max-w-lg lg:max-w-xl">
  <h3
    class="text-lg leading-none font-semibold tracking-wide uppercase sm:tracking-[0.2em] lg:text-2xl lg:tracking-[0.3rem]"
  >
    <span class="text-xl text-stone-500">{id}.&nbsp;</span>{title}
  </h3>
  <p class="my-3 text-xl leading-normal lg:text-2xl">
    <slot />
  </p>
  <Image class="block md:hidden" src={image} alt={`${title} Skills`} />
</div>

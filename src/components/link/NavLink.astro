---

const { label, href, css, title, icon = ""} = Astro.props;
const isActive = Astro.url.pathname === href || (href !== '/' && Astro.url.pathname.startsWith(href));
const ariaLabel = title || label;

---

<a  class={`${isActive ? 'active' : ''} highlight block relative overflow-hidden rounded-full font-brand border-dashed border-black border text-base md:text-xl px-4 py-2`}
    aria-label={`${ariaLabel} page`} 
    title={`${ariaLabel} page`} 
    href={href}>
    {label.toUpperCase() }
</a> 

<style>
    .highlight.active {
        background-color: white;
    }
    .highlight::before{
        position: absolute;
        content:"";
        inset:0;
        background-color: white;
        z-index: -1;
        transform: scaleX(0);
        transform-origin: left;
        transition: transform 400ms ease-in-out;
    }
    .highlight:hover::before{
        transform: scaleX(100%);
    }
</style>
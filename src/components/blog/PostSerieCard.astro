---
import type { CollectionEntry } from "astro:content";
import DraftBadge from "./DraftBadge.astro";
interface Props {
  post: CollectionEntry<"blog">;
}

const { post } = Astro.props;

if (!post) {
  throw new Error("Sorry, could not find post");
}

const dateOptions: Intl.DateTimeFormatOptions = {
  year: "numeric",
  month: "long",
  day: "numeric",
};
const dateISOString = new Date(post.data.date).toLocaleDateString(
  "en-EN",
  dateOptions,
);
---

<a
  href=`/blog/${post.id}`
  class="border-muted-border hover:bg-muted-background borde4 flex items-center gap-4 border"
  ><div
    class="border-muted-border bg-muted-background flex h-full w-8 items-center justify-center border-e font-semibold"
  >
    {post.data.order}
  </div><div class="py-2">
    <h2 class="font-semibold">{post.data.title}</h2><time
      class="text-muted first-letter:uppercase">{dateISOString}</time
    >
    <DraftBadge visible={post.data.draft} />
  </div>
</a>

---
import type { CollectionEntry } from "astro:content";
import DraftBadge from "./DraftBadge.astro";
interface Props {
  post: CollectionEntry<"blog">;
}

const { post } = Astro.props;

if (!post) {
  throw new Error("Sorry, could not find post");
}

const dateOptions: Intl.DateTimeFormatOptions = {
  year: "numeric",
  month: "long",
  day: "numeric",
};
const dateISOString = new Date(post.data.date).toLocaleDateString(
  "en-EN",
  dateOptions,
);
---

<a
  href=`/blog/${post.id}`
  class="border-muted-border hover:bg-muted-background borde4 flex items-center gap-4 border"
  ><time
    class="text-muted bg-muted-background border-muted-border w-50 border-e px-4 py-2 first-letter:uppercase"
    >{dateISOString}</time
  >
  <h2 class="py-2 font-semibold">{post.data.title}</h2>
  <DraftBadge visible={post.data.draft} />
</a>

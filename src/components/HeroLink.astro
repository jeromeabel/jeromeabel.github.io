---
import { Icon } from 'astro-icon';
const { label, href } = Astro.props;
---
<a 
    class="flex justify-between text-base lg:text-xl border-dotted border-b-2 hover:-translate-y-1 transition-transform hover:border-b border-b-black hover:border-solid py-1" 
    aria-label={label} 
    href={href}>
    { label }
    <Icon pack="mdi" name="arrow-top-right" class="h-6 ml-1" />
</a> 
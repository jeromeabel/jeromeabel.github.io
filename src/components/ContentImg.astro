---
import { Picture } from "@astrojs/image/components";
const { src, alt } = Astro.props        
---

<Picture 
        class="mx-auto rotate-x-1"
        src={src} 
        alt={alt}
        widths={[600, 900, 1200, 1500]}
        sizes="(max-width: 800px) 100vw, 50vw"
        formats={["avif", "webp", "jpg"]}
        />




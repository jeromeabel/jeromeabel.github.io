---
import Icon from 'astro-icon';
const aStyle =
  'flex gap-2 sm:gap-4 max-w-fit items-center text-lg px-4 sm:px-6 py-2 bg-transparent hover:bg-white transition-all text-black border border-dashed prose-a:border-none border-black rounded-full';
const iconStyle = 'stroke-current fill-none h-4 sm:h-6';
const { prev, next } = Astro.props;

// const prevURL = new URL(prev?.slug, Astro.url);
// const nextURL = new URL(next?.slug, Astro.url);
const nextURL = `/works/${next?.slug}`;
const prevURL = `/works/${prev?.slug}`;

---

<div class="flex justify-between pt-12 hover:prose-a:border-dashed prose-a:font-normal">
  <div class="">
    {
      prev ? (
        <a href={prevURL} class={aStyle} aria-label={prev?.data.title} title={prev?.data.title}>
          <Icon name="ph:arrow-left-light" class={iconStyle} />
          {prev?.data.title}
        </a>
      ) : null
    }
  </div>

  <div class="self-end">
    {
      next ? (
        <a href={nextURL} class={aStyle} aria-label={next?.data.title} title={next?.data.title}>
          {next?.data.title}
          <Icon name="ph:arrow-right-light" class={iconStyle} />
        </a>
      ) : null
    }
  </div>
</div>

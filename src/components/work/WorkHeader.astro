---
const { data } = Astro.props;

const year = new Date(data.date).getFullYear();
---

<span
  class="absolute left-0 opacity-5 text-black text-9xl font-bold -rotate-90 -z-10"
  >{year}</span
>
<header class="mt-8 mb-16 w-full md:w-3/4 xl:w-1/2">
  <h1>{data.title}</h1>
  <p class="text-2xl lg:text-4xl font-brand mb-8">{data.abstract}</p>
  <div class="flex justify-between my-12">
    <div>
      <p class="font-bold">TYPE</p>
      <p>{data.type}</p>
    </div>
    <div>
      <p class="font-bold">STACK</p>
      <ul>
        {data.stack?.map((tech) => <li>{tech}</li>)}
      </ul>
    </div>

    <div>
      <p class="font-bold">LINKS</p>
      <!-- <div class="flex flex-col gap-2">
				{ 
					data.demo && <ArrowLink href={
					data.demo} label="Demo" css="text-base"/> }
				{ 
				data.website && <ArrowLink href={
					data.demo} label="Website" css="text-base"/> }
				{ 
				data.git && <ArrowLink href={
					data.demo} label="Code" css="text-base"/> } -->
    </div>
  </div>
</header>

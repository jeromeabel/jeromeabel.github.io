---
import { Icon } from "astro-icon/components";
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
  label: string;
  icon?: string;
}

const { label, icon, href, ...props } = Astro.props;
---

<a
  class="flex h-14 max-w-fit items-center gap-4 rounded-full border border-dashed border-black bg-transparent px-6 text-lg text-black transition-all hover:bg-white"
  href={href}
  aria-label={`${label}`}
  title={`${label}`}
  {...props}
>
  {label}
  {icon ? <Icon name={icon} class="h-6 fill-none stroke-current" /> : null}
</a>

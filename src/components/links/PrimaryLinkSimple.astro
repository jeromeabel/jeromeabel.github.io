---
import { Icon } from "astro-icon/components";
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
  label: string;
  icon: string;
}

const { label, icon, href, ...props } = Astro.props;
---

<a
  class="hover-fx flex max-w-fit items-center gap-2 rounded-full bg-black px-6 py-3 text-base text-white"
  href={href}
  aria-label={`${label}`}
  title={`${label}`}
  target="_blank"
  {...props}
  rel="nofollow noopener noreferrer"
>
  {label}
  <Icon name={icon} class="w-6 fill-none stroke-none" />
</a>

<style>
  .hover-fx {
    background-image: linear-gradient(#fff, #fff);
    background-size: 0 100%;
    background-repeat: no-repeat;
    transition: 0.4s;
    border: none;
  }
  .hover-fx:hover {
    background-size: 100% 100%;
    color: var(--color-black);
    border: none;
  }
  @media (prefers-reduced-motion: reduce) {
    .hover-fx {
      transition: none;
    }
  }
</style>

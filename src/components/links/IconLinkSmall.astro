---
import { Icon } from "astro-icon/components";
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
  label: string;
  icon: string;
  size?: string;
  animate?: boolean;
}

const {
  label,
  icon,
  size = "h-9",
  animate = false,
  href,
  ...props
} = Astro.props;
---

<a
  class:list={[
    "grid h-10 w-10 place-items-center rounded-full border border-dashed border-black shadow-sm transition-all duration-300 hover:bg-black hover:text-white",
    { "motion-safe:animate-[bounce_2.5s_ease-in_infinite]": animate },
  ]}
  href={href}
  aria-label={label}
  title={label}
  target="_blank"
  rel="nofollow noopener noreferrer"
  {...props}
>
  <Icon name={icon} class="h-6" />
</a>

---
import IconLinkSmall from '@components/links/IconLinkSmall.astro';
---

<section
  class="mt-32 text-xl py-20 bg-white border-t-2 border-b-2 border-dashed border-black"
>
  <div class="container flex flex-col gap-8">
    <h2
      class="text-3xl uppercase font-extrabold tracking-[0.4rem] leading-none"
    >
      LET'S TALK
    </h2>

    <div class="flex flex-col">
      <h3 class="text-slate-500">Email me at</h3>
      <p>
        <a class="font-semibold" href="mailto:dev@jeromeabel.net" title="Email"
          >dev@jeromeabel.net</a
        >
      </p>
    </div>

    <div class="flex flex-col gap-2">
      <h3 class="text-slate-500">Follow</h3>
      <div class="flex gap-3">
        <IconLinkSmall label="GitHub" href="https://github.com/jeromeabel" icon="github" />
        <IconLinkSmall label="Framagit" href="https://framagit.org/jeromeabel" icon="mdi:gitlab"/>
        <IconLinkSmall label="LinkedIn" href="https://www.linkedin.com/in/jerome-abel/" icon="linkedin" />
      </div>
    </div>
  </div>
</section>

---
import { Image } from "astro:assets";
import { getEntry, render } from "astro:content";
interface Props {
  id: string;
}
const { id } = Astro.props;

const entry = await getEntry("feature", id);
if (!entry) {
  // Handle Error, for example:
  throw new Error("Could not find entry");
}
const { Content } = await render(entry);
---

<article>
  <div
    class="dark:border-muted aspect-auto max-w-fit bg-gradient-to-r from-white from-0% p-8 text-pretty sm:aspect-[2/1] md:from-30% lg:p-12 lg:pb-8 dark:border dark:bg-none"
  >
    <Image
      class="flex-1 dark:invert"
      src={entry?.data.img}
      alt={`Illustration ${entry?.data.title}`}
    />
    <h2 class="font-title mt-4 text-3xl tracking-wide uppercase lg:mt-6">
      {entry?.data.title}
    </h2>
  </div>
  <div class="prose-lg sm:prose-xl mt-8 md:mt-10"><Content /></div>
</article>

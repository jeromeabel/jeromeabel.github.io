---
import { getEntryBySlug, type CollectionEntry } from 'astro:content';
// import type { CollectionEntry } from 'astro:content';

interface Props {
  slug: string;
}
const { slug } = Astro.props;
const entry = (await getEntryBySlug(
  'features',
  slug,
)) as CollectionEntry<'features'>;
const { Content } = await entry.render();
---

<article class="">
  <div class="bg-gradient-to-r from-white from-0% md:from-30% p-6 pb-4 lg:p-12 lg:pb-8 aspect-auto sm:aspect-[2/1] md:aspect-auto">
    <img src={entry?.data.img.src} alt="" class="h-full" />
     <h2 class="font-title mt-4 lg:mt-6 text-3xl uppercase tracking-wide">
      {entry?.data.title}
    </h2>
  </div>
  <div class="prose-lg sm:prose-xl mt-8 md:mt-10"><Content /></div>
</article>

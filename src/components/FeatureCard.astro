---
import { getEntry, getEntryBySlug, type CollectionEntry } from 'astro:content';
// import type { CollectionEntry } from 'astro:content';

interface Props {
  slug: string;
}
const { slug } = Astro.props;
const entry = (await getEntryBySlug(
  'features',
  slug,
)) as CollectionEntry<'features'>;
const { Content, headings } = await entry.render();
---

<article class="border border-red-500 flex flex-col sm:flex-row lg:flex-col">
  <div class="bg-white aspect-video lg:w-full grid items-center lg:aspect-[4/5]">
    <div class="w-1/3">
      <img src={entry?.data.img.src} />
    </div>
  </div>
  <div class="prose lg:prose-xl">
    <Content />
  </div>
</article>

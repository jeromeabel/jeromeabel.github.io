---
import { Icon } from 'astro-icon';
const { label, href, icon } = Astro.props.link;
const isActive = Astro.url.pathname === href || (href !== '/' && Astro.url.pathname.startsWith(href));
---								
<a 
    class={` ${isActive ? 'active' : ''} flex p-2 nav-link  border-transparent hover:border-b-2 hover:border-black border-b-2`} 
    aria-label={label} 
    href={href}>
    <Icon pack="mdi" name={icon} size={24} /> 
    <span class="sr-only">{label}</span>
</a>

    <!-- { label.toUpperCase() } hover:bg-black hover:text-white 
   -->

<style>
    .active {
         /* 
         background-color: black;
        color:white; */
        color: black;
        border-bottom: 2px solid black;
        /* transform-origin: left; */
        animation:animRotate 330ms 50ms ease-in-out both;
        /* animation:animBg 300ms 20ms ease-in-out both; */
    }

    .nav-link:hover {
        /* color:rgb(0, 255, 0);
        transition: color 300ms; */
    }

	@keyframes animRotate {
		from { 
			transform: rotate(0);
		}
		to { 
			transform: rotate(180deg);
		}
	}

    	@keyframes animBg {
		from { 
			color:black;
		}
		to { 
			color:rgb(0, 255, 0);
		}
	}
</style>
---
const { label, href, css, title } = Astro.props.link;
const isActive = Astro.url.pathname === href || (href !== '/' && Astro.url.pathname.startsWith(href));
const ariaLabel = title || label;
---								
<a  class={`
        ${isActive ? 'active' : ''}
        ${css}
        block
        relative
        overflow-hidden
        rounded-full 
        font-brand
        border-dashed
        border-black
        border
        text-base
        md:text-xl
        px-4
        py-2
        `}
    aria-label={`${ariaLabel} page`} 
    title={`${ariaLabel} page`} 
    href={href}>
    { label.toUpperCase() }
</a> 

<style>
    @keyframes rotation {
        to { transform: rotate(20deg); }
    }
    .home {
        border:none;
        font-size: 2em;
    }
    .home:hover {
        animation: rotation 300ms 10ms ease-in-out infinite alternate
    }
    .highlight.active {
        background-color: white;
    }
    .highlight::before{
        position: absolute;
        content:"";
        inset:0;
        background-color: white;
        z-index: -1;
        transform: scaleX(0);
        transform-origin: left;
        transition: all 500ms;
    }
    .highlight:hover::before{
        transform: scaleX(100%);
    }
</style>
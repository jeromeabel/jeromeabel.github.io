---
import { getCollection } from 'astro:content';

import BaseLayout from '@layouts/BaseLayout.astro';
import CardWork from '@components/CardWork.astro';
import Grid from '@components/Grid.astro';

const works = (await getCollection('work')).sort(
	(a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);

---

<BaseLayout page="Work" description="Learn about Jérôme Abel's most recent web projects">
	<Grid>
		{ works.map( (work, index) => ( <CardWork work={work} index={index} /> ))}
	</Grid>
</BaseLayout>

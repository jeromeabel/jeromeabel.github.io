---
import { getCollection } from 'astro:content';

import WorkCard from '@components/work/WorkCard.astro';
import Layout from '@layouts/Layout.astro';

const works = (await getCollection('work')).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);
---

<Layout page="Work">
  <main class="container py-8 lg:py-24">
    <header class="w-full lg:w-2/3 flex flex-col gap-4 lg:gap-8">
      <h1
        class="font-title text-4xl sm:text-5xl lg:text-6xl uppercase tracking-widest"
      >
        Work
      </h1>
      <p
        class="text-xl sm:text-2xl lg:text-3xl leading-normal tracking-normal md:tracking-wide"
      >
      Here, you'll find a collection of my web development projects and creative software explorations, combining technical skills with thoughtful design.
      </p>
    </header>

    <section
      class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 mt-8 lg:mt-24"
    >
      {works.map((work) => <WorkCard id={work.id} layout={3} />)}
    </section>
  </main>
</Layout>

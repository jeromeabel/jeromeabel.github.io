---
import SiteHead from '@components/SiteHead.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';

import '@fontsource/bubbler-one';
import '@fontsource/ibm-plex-sans';

export interface Props {
  page?: string | undefined;
  description?: string | undefined;
}

const { page, description } = Astro.props;
---

<html
  lang="en"
  class="overflow-x-hidden bg-[#f5ffe1] break-words scroll-smooth"
>
  <head>
    <SiteHead page={page} description={description} />
  </head>
  <body class="min-h-screen">
    <Header />
    <slot />
    <Footer />
  </body>
</html>

---
import Footer from '@components/Footer.astro';
import Header from '@components/Header.astro';
import Hero from '@components/Hero.astro';
import SiteHead from '@components/SiteHead.astro';

import '@fontsource/bubbler-one';
import '@fontsource/ibm-plex-sans';

export interface Props {
  page?: string | undefined;
  description?: string | undefined;
}

const { page, description } = Astro.props;
---

<html lang="en" class="overflow-x-hidden break-words text-stone-950 scroll-smooth">
  <head>
    <SiteHead page={page} description={description} />
  </head>
  <body class="h-screen">
    <Header />
    <Hero />
    <main class="container">
      <slot />
    </main>
    <Footer />
  </body>
</html>

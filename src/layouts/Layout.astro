---
import SiteHead from '@components/SiteHead.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';

import '@fontsource/bubbler-one';
import '@fontsource/ibm-plex-sans';

export interface Props {
  page?: string | undefined;
  description?: string | undefined;
}

const { page, description } = Astro.props;
---

<html
  lang="en"
  class="overflow-x-hidden bg-[#f5ffe1] break-words scroll-smooth"
>
  <head>
    <SiteHead page={page} description={description} />
  </head>
  <body class="min-h-screen">
    <Header />
    <slot />
    <Footer />
  </body>
</html>


<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap');
</style>

---
import '../styles/global.css';

import "@fontsource/bubbler-one"
import "@fontsource/ibm-plex-sans"

import SiteHead from "@components/SiteHead.astro";
import Navigation from "@components/Navigation.astro";
import Footer from "@components/Footer.astro";

export interface Props {
	page?: string | undefined;
	description?: string | undefined;
	image?: string | undefined;
}

const { page, description, image } = Astro.props;
---
<html lang="en">
	<head>
		<SiteHead page={page} description={description} image={image} />
	</head>
	<body>
        <Navigation />
			<main>
			<article class="container mx-auto my-8">
				<slot />
			</article>
    	</main>
        <Footer />
	</body>
</html>
